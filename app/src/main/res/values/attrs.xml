<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BorderImageView">
        <!-- 颜色值 -->
        <attr name="border_color" format="color" />
        <!-- 宽度 -->
        <attr name="side_border" format="dimension" />
    </declare-styleable>


    <declare-styleable name="RatioImageView">
        <!-- 以宽度为基准 -->
        <attr name="measure_by_width" format="boolean" />
        <!-- 以高度为基准  -->
        <attr name="measure_by_height" format="boolean" />
        <!-- 调整比  -->
        <attr name="measure_ratio" format="float" />
    </declare-styleable>


    <declare-styleable name="BorderNineGridImageView">
        <attr name="measure_single_ratio" format="float" />
        <attr name="measure_mulite_ratio" format="float" />
    </declare-styleable>

</resources>